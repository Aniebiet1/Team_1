{
  "version": 2,
  "builds": [
    {
      "src": "Backend/wsgi.py",
      "use": "@vercel/python"
    },
    {
      "src": "Frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "Frontend/$1"
    }
  ],
  "functions": {
    "api/*.py": {
      "maxDuration": 30
    }
  }
}
