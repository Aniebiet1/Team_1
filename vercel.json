{
    "version": 2,
    "builds": [
      {
        "src": "pip install -r Backend/requirements.txt && python Backend/Backend/wsgi.py",
        "use": "@vercel/python",
        "config": {
          "buildCommand": "Backend/Backend/wsgi.py",
          "runtime": "python3.9"
        }
      },
      {
        "src": "Frontend/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "Backend/Backend/wsgi.py"
      },
      {
        "src": "/(.*)",
        "dest": "Frontend/$1"
      }
    ]
  }
  